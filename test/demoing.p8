pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
function _init()
	stage=0
	tick=0
	stage_tick=0
	cls()
	music(0)
	srand(stat(85))
end
function _update()
	if(stage==0)then
		tick+=1
		for i=1,1000 do
			pset(rnd(128),rnd(128),rnd(15))
		end
		if(tick==20)then
			tick=0
			cls()
			stage_tick+=1
		end
		if(stage_tick==5)stage+=1
	elseif(stage==1) then
		if(tick==0)rectfill(rnd(128)-50,rnd(128)-50,rnd(128)+50,rnd(128)+50,rnd(15))
		tick+=1
		if(tick==2)then
			tick=0
			stage_tick+=1
		end
		if(stage_tick==50)then
			cls()
			stage+=1
		end
	elseif(stage==2) then
		tick+=1
		pset(tick,64+sin(time()/2)*25,rnd(14)+1)
		if(tick==100)then
			stage+=1
			tick=0
		end
	elseif(stage==3) then
		tick+=1
		pset(tick,64+cos(time()/2)*25,rnd(14)+1)
		if(tick==100)then
			tick=0
			stage+=1
		end
	elseif(stage==4) then
		tick+=1
		local camy=sin(time()/2)*25
		cls()
		color(7)
		print("look at him go!",-tick+1,10+camy)
		camera(-tick,camy)
		spr(1,0,64)
		if(tick==128)then
			cls()
			camera(0,0)
			tick=0
			stage_tick=0
			stage+=1
		end
	elseif(stage==5)then
		color(11)
		tick+=1
		if(tick==3)then
			local things={
				"タマカナワハ゜カサタ゛",
				"ワマハ゜ヤイヘ゛ト゛",
				"テ゛カマナイオハ゜シャハ゛",
			}
			print(things[flr(rnd(2)+1)])
			tick=0
			stage_tick+=1
		end
		if(stage_tick==50)then
			music(-1)
			for i=1,100 do
				print("\ac"..rnd(1)+1)
			end
			cls()
			color(8)
			print("∧ demoing.p8 ∧\nmade by chase peck")
			stop()
		end
	end
end
